@{
    ViewBag.Title = "Barometer aanmaken";
}
<div class="row">
    <div class="col-lg-12">
        <h2>Project</h2>
        <hr />
    </div>
    <div class="row">
        <div class="col-lg-5">
        @using (Html.BeginForm("Detail", "Project", FormMethod.Post, new { @class = "form-vertical", @role = "form" }))
        {
            <div class="form-group">
                <label class="control-label">Naam</label>
                @Html.TextBox("naam", "Wordfeud", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="control-label">Omschrijving</label>
                @Html.TextArea("omschrijving", "", new { @class = "form-control", @placeholder = "Waar gaat het project over?" })
            </div>
            <div class="form-group">
                <label class="control-label">Begin datum</label>
                <input type="date" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Eind datum</label>
                <input type="date" class="form-control">
            </div>
            <div class="form-group">
                <label class="control-label">Groepsindeling</label>
                <input type="file" class="form-control" name="groepsindeling" />
                <span class="help-block">Toegestaande bestanden : .xls, xlsx</span>
            </div>
            <hr />
            <div class="form-group">
                <label class="control-label">Beoordelingstemplate</label>
                <select class="form-control">
                    <option></option>
                    <option>Beoordelingstemplate standaard</option>
                    <option>Beoordelingstemplate leidinggeven</option>
                    <option>Beoordelingstemplate sociaal</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Beoordelings momenten</label>
                <div class="row">
                    <div class="col-xs-5">
                        <input type="date" class="form-control" />
                    </div>
                    <div class="col-xs-5">
                        <input type="date" class="form-control" />
                    </div>
                    <div class="col-xs-2">
                        @Html.ActionLink(" ", null, null, new { @class = "btn btn-default glyphicon glyphicon-plus", @Href = "#" })
                    </div>
                </div>
            </div>

            <hr />
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-primary" />
            </div>


        }
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6" >
        @using (Html.BeginForm("Add", "Group", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
        {
        <h3>Groep toevoegen</h3>
        <hr />
        
            <div class="form-group">
                <label>Groepsnaam</label>
                @Html.TextBox("groepsnaam"," ",new { @class = "form-control",@placeholder = "Groepsnaam" })
            </div>
            <div class="form-group">
                <label>Tutor</label>
                <select class="form-control">
                    <option>Kies een tutor</option>
                    @foreach (BarometerDataAccesLayer.User tutor in Model.Tutors)
                    {
                        <option>@tutor.firstname @tutor.lastname</option>
                    }
                </select>
            </div>
            <hr />
            <input type="submit" value="Groep toevoegen" class="btn btn-default" onclick="AddGroup()"/>
        }
    </div>
    <div class="col-lg-6">
        <h3>Overzicht groepen</h3>
        <hr />
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>Groepscode</td>
                    <td>Tutor</td>
                    <td>Aantal leerlingen</td>
                    <td>Bekijk</td>
                    <td>Verwijder</td>
                </tr>
            </thead>
            <tbody>
                @foreach (BarometerDataAccesLayer.ProjectGroup group in Model.Groups)

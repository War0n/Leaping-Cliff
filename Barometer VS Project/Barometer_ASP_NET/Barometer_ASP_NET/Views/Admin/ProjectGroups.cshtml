                    <tr>
                    <td>@group.group_code</td>
                    <td>@Model.GetTutor(group)</td>
                    <td>@Model.GetGroupMembers(group).Count()</td>
                    <td>@Html.ActionLink(" ", "ProjectGroupsView", "Admin", new { @class = "glyphicon glyphicon-stats"})</td>
                    <td>@Html.ActionLink(" ", "Remove", "Group", new { @class = "glyphicon glyphicon-remove", @Href = "#" })</td>

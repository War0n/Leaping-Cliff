@model Barometer_ASP_NET.Wrappers.UserDashboardWrapper

@{
    ViewBag.Title = "Projecten";
}
<div class="row">
    <div class="col-lg-12">
        <h2>@Html.Action("ShowNameOfStudent", "Project")</h2>
        <hr />
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>Titel</td>
                    <td>Blok</td>
                    <td>Status</td>
                    <td>Eindcijfer groep</td>
                    <td>Eindcijfer individueel</td>
                    <td>Bekijk</td> 
                </tr>
            </thead>
            <tbody>
                @foreach (BarometerDataAccesLayer.Project projects in Model.AllProjects)
                {
                    <tr>
                        <td>@projects.name</td>
                        <td>@projects.blok</td>
                        @switch (projects.status_name)
                        {
                            case "Active":
                                <td><span class="label label-success">Actief</span></td>
                                break;
                            case "Closed":
                            <td><span class="label label-success">Afgelopen</span></td>
                                break;
                            case "Pending":
                            <td><span class="label label-success">Aangemaakt</span></td>
                                break;
                            default:
                            <td><span class="label label-success">Onbekend</span></td>
                                break;
                        }
                        <td>@*Model.Grades.Where(r => r.Key == projects.name).FirstOrDefault().Value[1]*@</td>
                        <td>@*Model.Grades.Where(r => r.Key == projects.name).FirstOrDefault().Value[0]*@</td>
                        <td><a href="@Url.Action("Project", new { project_id = projects.id })"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>

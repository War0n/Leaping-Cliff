@model Barometer_ASP_NET.Wrappers.UserDashboardWrapper

@{
    ViewBag.Title = "Projecten";
}
<div class="row">
    <div class="col-lg-12">
        <h2>@Html.Action("ShowNameOfStudent", "Project")</h2>
        <hr />
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>Titel</td>
                    <td>Blok</td>
                    <td>Eindcijfer groep</td>
                    <td>Eindcijfer individueel</td>
                    <td>Bekijk</td>
                </tr>
            </thead>
            <tbody>
                @foreach (BarometerDataAccesLayer.Project projects in Model.AllProjects)
                {
                    <tr>
                        <td>@projects.name</td>
                        <td></td>
                        @switch (projects.status_name)
                        {
                            case "Active":
                                <td><span class="label label-success">Actief</span></td>
                                break;
                            case "Closed":
                            <td><span class="label label-success">Afgelopen</span></td>
                                break;
                            case "Pending":
                            <td><span class="label label-success">Aangemaakt</span></td>
                                break;
                            default:
                            <td><span class="label label-success">Onbekend</span></td>
                                break;
                        }
                        <td>@{int weeks = 0;} @if (projects.status_name == "Active") { weeks = (int)((DateTime.Now).Subtract((DateTime)projects.start_date).TotalDays) / 7; }@weeks</td>
                        <td>@Html.ActionLink(" ", "ProjectGroups", "User", new { projectId = projects.id }, new { @class = "glyphicon glyphicon-align-justify" })</td>
                        <td>@Html.ActionLink(" ", "Detail", "User", new { projectId = projects.id }, new { @class = "glyphicon glyphicon-edit" })</td>
                        <td>@Html.ActionLink(" ", "DeleteProject", "User", new { projectId = projects.id }, new { @class = "glyphicon glyphicon-remove" })</td>
                       
                    </tr>
                }

                </tbody>
            </table>
        </div>
    </div>
